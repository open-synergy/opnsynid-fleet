<openerp>
<data>

<record id="fleet_passanger_boarding_disembark_view_form" model="ir.ui.view">
    <field name="name">Passanger Boarding/Disembark</field>
    <field name="model">fleet.passanger_boarding_disembark</field>
    <field name="inherit_id" ref="fleet_work_order_passanger.fleet_passanger_boarding_disembark_view_form"/>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//footer" position="before">
                    <notebook>
                        <page string="Available Onboard Ticket" name="onboard_ticket_sale_page">
                            <field name="onboard_ticket_sale_ids" colspan="2" nolabel="1" widget="many2many_kanban" context="{'work_order_id':work_order_id}">
                                <kanban create="false">
                                    <field name="passanger_type_id"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_card">
                                                <div class="oe_kanban_content">
                                                    <h4 class="text-center">
                                                        <strong>
                                                            <field name="passanger_type_id"/>
                                                        </strong>
                                                    </h4>
                                                    <div class="oe_center">
                                                        <button name="onboard_ticket_sale" type="object">
                                                            Buy Ticket
                                                        </button>
                                                    </div>
                                                </div>      
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
            </xpath>
        </data>
    </field>
</record>
</data>
</openerp>
