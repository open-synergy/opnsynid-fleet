<openerp>
    <data>
        <record id="fleet_work_order_view_form" model="ir.ui.view">
            <field name="name">Compute Distance Using Google Maps</field>
            <field name="model">fleet.work.order</field>
            <field name="inherit_id" ref="fleet_work_order_multiple_route.fleet_work_order_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='route_ids']/tree/field[@name='distance']" position="after">
                    <button name="button_calc_distance" string="Calculate" type="object" icon="gtk-execute" class="oe_inline"/> 
                </xpath>
            </field>
        </record>
    </data>
</openerp>
