<openerp>
<data>

<record id="fleet_vehicle_view_form" model="ir.ui.view">
    <field name="name">fleet.vehicle form</field>
    <field name="model">fleet.vehicle</field>
    <field name="inherit_id" ref="fleet_vehicle_notebook.fleet_vehicle_view_form"/>
    <field name="arch" type="xml">
        <xpath expr="//notebook" position="inside">
            <page name="page_cargo" string="Cargo">
                <group name="group_cargo" colspan="4" col="2">
                    <field name="cargo"/>
                    <field name="floor_space" attrs="{'required':[('cargo','=',True)]}"/>
                    <field name="floor_space_uom_id" attrs="{'required':[('cargo','=',True)]}"/>
                    <field name="loading_space" attrs="{'required':[('cargo','=',True)]}"/>
                    <field name="loading_space_uom_id" attrs="{'required':[('cargo','=',True)]}"/>
                    <field name="load_capacity" attrs="{'required':[('cargo','=',True)]}"/>
                    <field name="load_capacity_uom_id" attrs="{'required':[('cargo','=',True)]}"/>
                </group>
            </page>
        </xpath>
    </field>
</record>

</data>
</openerp>
