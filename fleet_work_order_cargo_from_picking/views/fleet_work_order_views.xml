<openerp>
<data>

<record id="fleet_work_order_view_form" model="ir.ui.view">
    <field name="name">fleet.work.order form</field>
    <field name="model">fleet.work.order</field>
    <field name="inherit_id" ref="fleet_work_order_cargo.fleet_work_order_view_form"/>
    <field name="arch" type="xml">
        <xpath expr="//header/field[@name='state']" position="before">
            <button name="%(load_picking_to_cargo_action)d" string="Load Cargo From Picking" type="action" states="draft,confirm"/>
        </xpath>
        <xpath expr="//notebook" position="inside">
            <page name="picking" string="Pickings">
                <field name="picking_ids" string="Pickings" nolabel="1" colspan="4" readonly="0" widget="many2many">
                    <tree colors="blue:state == 'draft';grey:state == 'cancel';red:state not in ('cancel', 'done') and min_date &lt; current_date" string="Picking list" create="false" edit="false" delete="true">
                        <field name="name"/>
                        <field name="location_dest_id"/>
                        <field name="partner_id"/>
                        <field name="date"/>
                        <field name="min_date" invisible="1"/>
                        <field name="origin"/>
                        <field name="group_id" invisible="1"/>
                        <field name="backorder_id"/>
                        <field name="picking_volume"/>
                        <field name="picking_gross_weight"/>
                        <field name="picking_net_weight"/>
                        <field name="state"/>
                        <field name="priority" invisible="1"/>
                        <field name="picking_type_id" invisible="1"/>
                    </tree>
                </field>
                <group name="group_picking_1" colspan="4" col="2">
                    <group name="group_picking_1_1" colspan="1" col="2" string="Picking Information">
                        <label for="picking_volume" string="Volume"/>
                        <div>
                            <field name="picking_volume" class="oe_inline" style="vertical-align:baseline"/> m3
                        </div>
                        <label for="picking_volume_diff" string="Volume Diff"/>
                        <div>
                            <field name="picking_volume_diff" class="oe_inline" style="vertical-align:baseline"/> m3
                        </div>
                        <label for="picking_volume_progress" string="Volume Progress"/>
                        <div>
                            <field name="picking_volume_progress" class="oe_inline" style="vertical-align:baseline" widget="progressbar"/>
                        </div>
                        <label for="picking_weight" string="Weight"/>
                        <div>
                            <field name="picking_weight" class="oe_inline" style="vertical-align:baseline"/> kg
                        </div>
                        <label for="picking_weight_diff" string="Weight Diff"/>
                        <div>
                            <field name="picking_weight_diff" class="oe_inline" style="vertical-align:baseline"/> kg
                        </div>
                        <label for="picking_weight_progress" string="Weight Progress"/>
                        <div>
                            <field name="picking_weight_progress" class="oe_inline" style="vertical-align:baseline" widget="progressbar"/>
                        </div>
                    </group>
                    <group name="group_picking_1_2" string="Cargo Capacity">
                            <label for="loading_space"/>
                            <div>
                                <field name="loading_space" class="oe_inline" style="vertical-align:baseline"/> m3
                            </div>
                            <label for="load_capacity"/>
                            <div>
                                <field name="load_capacity" class="oe_inline" style="vertical-align:baseline"/> kg
                            </div>
                    </group>
                </group>
            </page>
            <page string="Picking Summary" name="page_line_summary">
                <field name="picking_summary_ids" nolabel="1" colspan="4">
                    <tree create="false" edit="false" delete="true">
                        <field name="product_id"/>
                        <field name="reserved_availability"/>
                        <field name="product_uom_id"/>
                    </tree>
                    <form>
                        <group name="grp_summary_1" colspan="4" col="2">
                            <field name="product_id"/>
                            <field name="reserved_availability"/>
                            <field name="product_uom_id"/>
                            <field name="stock_move_ids"/>
                        </group>
                    </form>
                </field>
            </page>
        </xpath>
        <xpath expr="//field[@name='type_id']" position="after">
            <field name="allowed_picking_type_ids" widget="many2many_tags" groups="base.group_system"/>
        </xpath>
    </field>
</record>

<record id="fleet_work_order_view_tree" model="ir.ui.view">
    <field name="name">fleet.work.order tree</field>
    <field name="model">fleet.work.order</field>
    <field name="inherit_id" ref="fleet_work_order.fleet_work_order_view_tree"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='state']" position="before">
            <field name="picking_volume_progress" widget="progressbar"/>
            <field name="picking_weight_progress" widget="progressbar"/>
        </xpath>
    </field>
</record>

</data>
</openerp>
